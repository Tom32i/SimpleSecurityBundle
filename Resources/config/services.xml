<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="tom32i.simple_security.controller.security.class">Tom32i\Bundle\SimpleSecurityBundle\Controller\SecurityController</parameter>
        <parameter key="tom32i.simple_security.listener.doctrine.class">Tom32i\Bundle\SimpleSecurityBundle\Listener\DoctrineListener</parameter>
    </parameters>

    <services>
        <!-- Listeners -->
        <service id="tom32i.simple_security.listener.doctrine" class="%tom32i.simple_security.listener.doctrine.class%">
            <argument type="service" id="security.encoder_factory" />
            <tag name="doctrine.event_listener" event="prePersist" />
            <tag name="doctrine.event_listener" event="preUpdate" />
        </service>
    </services>
</container>
